<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fiteval.ui.fragment.ShopFragment">

    <com.fiteval.ui.custom.ObservableScrollView
        android:id="@+id/fragment_shop_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/grey_f3"
        android:fillViewport="false">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Avatar + GridView -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Avatar Layout -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="212dp"
                    android:background="@color/grey_33"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/fragment_shop_avatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:background="@drawable/avatar_background" />

                    <!-- Separator -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/grey_85" />
                </RelativeLayout>

                <!-- Sticky Header Place Holder -->
                <View
                    android:id="@+id/fragment_shop_header_placeholder"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:visibility="gone" />

                <!-- Item GridView -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.fiteval.ui.custom.NonScrollableGridView xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/fragment_shop_gridview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/grey_f3"
                        android:descendantFocusability="blocksDescendants"
                        android:gravity="center"
                        android:horizontalSpacing="4dp"
                        android:numColumns="3"
                        android:padding="4dp"
                        android:scrollbars="none"
                        android:stretchMode="columnWidth"
                        android:verticalSpacing="4dp" />
                </RelativeLayout>
            </LinearLayout>

            <!-- Sticky Header -->
            <LinearLayout
                android:id="@+id/fragment_shop_sticky_header_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#FFFFEE"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/fragment_shop_coin_icon"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignParentLeft="true"
                        android:layout_margin="5dp"
                        android:src="@drawable/coin" />

                    <TextView
                        android:id="@+id/fragment_shop_gold"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginBottom="4dp"
                        android:layout_toRightOf="@+id/fragment_shop_coin_icon"
                        android:textColor="@color/black"
                        android:textSize="35dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:gravity="bottom"
                        android:padding="2dp"
                        android:text="Tap here to scroll to top"
                        android:textColor="@color/grey_bb" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/grey_dd" />
            </LinearLayout>
        </FrameLayout>
    </com.fiteval.ui.custom.ObservableScrollView>
</RelativeLayout>
