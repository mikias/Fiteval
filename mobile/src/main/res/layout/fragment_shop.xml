<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fiteval.ui.fragment.ShopFragment">

    <com.fiteval.ui.custom.ObservableScrollView
        android:id="@+id/fragment_shop_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/fragment_shop_btn_layout"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/grey_f3"
        android:fillViewport="false">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Avatar + GridView -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Avatar Layout -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="212dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/fragment_shop_avatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp" />

                    <!-- Separator -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/grey_85" />
                </RelativeLayout>

                <!-- Sticky Header Place Holder -->
                <View
                    android:id="@+id/fragment_shop_header_placeholder"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:visibility="gone" />

                <!-- Item GridView -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.fiteval.ui.custom.NonScrollableGridView xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/fragment_shop_gridview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:descendantFocusability="blocksDescendants"
                        android:gravity="center"
                        android:horizontalSpacing="4dp"
                        android:numColumns="3"
                        android:padding="4dp"
                        android:scrollbars="none"
                        android:stretchMode="columnWidth"
                        android:verticalSpacing="4dp" />
                </RelativeLayout>
            </LinearLayout>

            <!-- Sticky Header -->
            <LinearLayout
                android:id="@+id/fragment_shop_sticky_header_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#FFFFEE"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_margin="5dp"
                        android:gravity="center_vertical"
                        android:src="@drawable/coin" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingBottom="4dp"
                        android:text="500"
                        android:textColor="@color/black"
                        android:textSize="35dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/grey_dd" />
            </LinearLayout>
        </FrameLayout>
    </com.fiteval.ui.custom.ObservableScrollView>

    <!-- Buttons -->
    <LinearLayout
        android:id="@+id/fragment_shop_btn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/fragment_shop_buy_btn"
            style="@style/bottom_button_style"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="BUY"
            android:visibility="gone" />

        <Button
            android:id="@+id/fragment_shop_wear_btn"
            style="@style/bottom_button_style"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="WEAR"
            android:visibility="gone" />

        <Button
            android:id="@+id/fragment_shop_takeoff_btn"
            style="@style/bottom_button_style"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="TAKE OFF"
            android:visibility="gone" />
    </LinearLayout>
</RelativeLayout>
