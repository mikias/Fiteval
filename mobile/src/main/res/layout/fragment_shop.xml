<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fiteval.ui.fragment.ShopFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/fragment_shop_btn"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/fragment_shop_layout_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_weight="1.2"
            android:background="@drawable/solid_white_rounded_corner"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/fragment_shop_nickname"
                android:gravity="center"
                android:text="SilverKnight"
                android:textSize="@dimen/activity_main_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_shop_layout_center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="0.5"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="2.5dp"
                android:layout_weight="1"
                android:background="@drawable/solid_white_rounded_corner">

                <ImageView
                    android:id="@+id/fragment_shop_avatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:src="@drawable/knight" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="2.5dp"
                android:layout_weight="1"
                android:background="@drawable/solid_white_rounded_corner">

                <GridView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></GridView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_shop_layout_bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/solid_white_rounded_corner"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fragment_shop_item_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="[ Beginner's Long Sword ]\nAttack: +10\nPrice: 300 Gold"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/fragment_shop_btn"
        style="@style/bottom_button_style"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:text="BUY" />
</RelativeLayout>
