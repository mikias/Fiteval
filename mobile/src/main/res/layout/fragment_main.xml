<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.fiteval.ui.fragment.MainFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout_avatar"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5">

                <ProgressBar
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:indeterminate="true" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/fragment_main_icon_size"
                        android:layout_height="@dimen/fragment_main_icon_size"
                        android:src="@drawable/heart_pulse" />

                    <TextView
                        android:id="@+id/fragment_main_bpm"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/fragment_main_icon_size"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="6dp"
                        android:text="105"
                        android:textColor="@color/black"
                        android:textSize="@dimen/activity_main_text_size" />
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5">

                <ProgressBar
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:indeterminate="true" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/fragment_main_icon_size"
                        android:layout_height="@dimen/fragment_main_icon_size"
                        android:src="@drawable/walk" />

                    <com.fiteval.ui.custom.AutoResizeTextView
                        android:id="@+id/fragment_main_step"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/fragment_main_icon_size"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="6dp"
                        android:text="1778"
                        android:textColor="@color/black"
                        android:textSize="@dimen/activity_main_text_size" />
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_avatar"
        android:layout_width="match_parent"
        android:layout_height="212dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/solid_white_rounded_corner">

        <ImageView
            android:id="@+id/fragment_main_avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/avatar_background" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_avatar"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

                <RelativeLayout
                    android:id="@+id/fragment_main_level_layout"
                    android:layout_width="40dp"
                    android:layout_height="40dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/icon_level_background" />

                    <com.fiteval.ui.custom.AutoResizeTextView
                        android:id="@+id/fragment_main_level"
                        android:layout_width="30dp"
                        android:layout_height="25dp"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="20dp"
                        android:text="99"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="22dp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/fragment_main_level_layout">

                    <ProgressBar
                        android:id="@+id/fragment_main_exp_progress"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:progress="30" />

                    <TextView
                        android:id="@+id/fragment_main_steps_left"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:layout_below="@+id/fragment_main_exp_progress"
                        android:layout_marginTop="5dp"
                        android:text="500 steps to next level"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/fragment_main_steps_status"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/fragment_main_exp_progress"
                        android:layout_marginRight="2dp"
                        android:layout_marginTop="5dp"
                        android:text="820/1320"
                        android:textSize="12dp" />
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/fragment_main_coin_icon"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/coin" />

                <TextView
                    android:id="@+id/fragment_main_gold"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="4dp"
                    android:gravity="center_vertical"
                    android:text="1,000"
                    android:textColor="@color/black"
                    android:textSize="@dimen/activity_main_text_size" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>