<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.fiteval.ui.fragment.MainFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout_avatar"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="right"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/fragment_main_icon_size"
                android:layout_height="@dimen/fragment_main_icon_size"
                android:src="@drawable/heart_pulse" />

            <ImageView
                android:layout_width="@dimen/fragment_main_icon_size"
                android:layout_height="@dimen/fragment_main_icon_size"
                android:src="@drawable/walk" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fragment_main_bpm"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/fragment_main_icon_size"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/activity_main_text_size" />

            <TextView
                android:id="@+id/fragment_main_step"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/fragment_main_icon_size"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/activity_main_text_size" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/solid_white_rounded_corner">

        <ImageView
            android:id="@+id/fragment_main_avatar"
            android:layout_width="100dp"
            android:layout_height="125dp"
            android:layout_margin="40dp"
            android:layout_marginLeft="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_avatar"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="right|center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="LV :"
                android:textSize="@dimen/activity_main_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="EXP :"
                android:textSize="@dimen/activity_main_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="GOLD :"
                android:textSize="@dimen/activity_main_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fragment_main_level"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/fragment_main_icon_size"
                android:gravity="center_vertical"
                android:text="17"
                android:textSize="@dimen/activity_main_text_size" />

            <TextView
                android:id="@+id/fragment_main_exp"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/fragment_main_icon_size"
                android:gravity="center_vertical"
                android:text="1020/1500"
                android:textSize="@dimen/activity_main_text_size" />

            <TextView
                android:id="@+id/fragment_main_gold"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/fragment_main_icon_size"
                android:gravity="center_vertical"
                android:text="46007"
                android:textSize="@dimen/activity_main_text_size" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>