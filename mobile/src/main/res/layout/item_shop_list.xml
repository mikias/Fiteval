<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_shop_card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/item_shop_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:contentDescription="hello world"
            android:scaleType="centerCrop"
            android:src="@drawable/box" />

        <TextView
            android:id="@+id/item_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/item_shop_image"
            android:layout_below="@+id/item_shop_image"
            android:layout_marginTop="8dp"
            android:inputType="text"
            android:text="hello world"
            android:textColor="#000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_shop_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/item_shop_name"
            android:layout_below="@+id/item_shop_name"
            android:layout_marginTop="4dp"
            android:text="hello world"
            android:textSize="12sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>