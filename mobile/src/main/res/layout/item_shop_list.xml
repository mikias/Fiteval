<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_shop_card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/item_shop_item_layout"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="8dp">

        <!-- Shop item itemImage -->
        <ImageView
            android:id="@+id/item_shop_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:scaleType="centerInside"
            android:src="@drawable/box" />

        <!-- Shop item name -->
        <TextView
            android:id="@+id/item_shop_name"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_below="@+id/item_shop_image"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="8dp"
            android:ellipsize="marquee"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingBottom="1dp"
            android:text="Item Name"
            android:textColor="@color/black"
            android:textSize="12dp" />

        <!-- Shop item price -->
        <LinearLayout
            android:id="@+id/item_shop_price_layout"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_below="@+id/item_shop_name"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/coin" />

            <TextView
                android:id="@+id/item_shop_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:text="300"
                android:textSize="12dp" />
        </LinearLayout>

        <!-- Shop item wear button -->
        <LinearLayout
            android:id="@+id/item_shop_wear_layout"
            android:layout_width="match_parent"
            android:layout_height="17dp"
            android:layout_below="@+id/item_shop_name"
            android:background="@drawable/solid_grey_rounded_corner"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="WEAR"
                android:textColor="@color/black"
                android:textSize="11dp" />
        </LinearLayout>

        <!-- Shop item take off button -->
        <LinearLayout
            android:id="@+id/item_shop_take_off_layout"
            android:layout_width="match_parent"
            android:layout_height="17dp"
            android:layout_below="@+id/item_shop_name"
            android:background="@drawable/solid_white_rounded_corner"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="TAKE OFF"
                android:textSize="11dp" />
        </LinearLayout>

        <!--<LinearLayout
            android:id="@+id/item_shop_buy_layout"
            android:layout_width="match_parent"
            android:layout_height="17dp"
            android:layout_below="@+id/item_shop_name"
            android:background="@drawable/solid_yellow_rounded_corner"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="BUY"
                android:textColor="@color/coffee"
                android:textSize="11dp" />
        </LinearLayout>-->
    </RelativeLayout>
</android.support.v7.widget.CardView>