<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fiteval.ui.fragment.LeaderboardFragment">

    <LinearLayout
        android:id="@+id/fragment_leaderboard_layout_top"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/solid_white_rounded_corner"
        android:gravity="right|center_vertical"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/fragment_leaderboard_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Show Friends Only   "
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fragment_leaderboard_layout_top"
        android:layout_margin="5dp"
        android:background="@drawable/solid_white_rounded_corner"
        android:orientation="vertical">

        <ListView
            android:id="@+id/fragment_leaderboard_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/grey_f3" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/fragment_leaderboard_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingBottom="65dp"
        android:visibility="visible" />
</RelativeLayout>
