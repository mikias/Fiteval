<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fiteval">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name=".config.FitevalApplication"
        android:allowBackup="true"
        android:icon="@drawable/knight"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/BaseTheme">
        //activity - define the class name
        <activity
            android:name="com.fiteval.ui.activity.IntroActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity android:name=".ui.activity.LoginActivity"
                  android:label="Login Activity">
        </activity>

        <activity android:name=".ui.activity.MainActivity"
                  android:label="Main Activity">

        </activity>

        <activity
            android:name="com.fiteval.ui.activity.SignUpActivity"
            android:label="@string/title_activity_login" />
        <activity android:name="com.fiteval.ui.activity.ForgotPasswordActivity">



        </activity>


    </application>

</manifest>